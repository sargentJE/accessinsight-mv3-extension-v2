{
  "manifest_version": 3,
  "name": "AccessInsight - WCAG Accessibility Checker",
  "version": "1.2.0",
  "description": "Comprehensive WCAG 2.1/2.2 accessibility testing with 46 rules, real-time scanning, visual overlay, and DevTools panel. Export findings as JSON, SARIF, HTML, or CSV.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Toggle A11y Panel",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self';"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Alt+Shift+A"
      },
      "description": "Toggle accessibility panel"
    },
    "next-finding": {
      "suggested_key": {
        "default": "Alt+Shift+N",
        "mac": "Alt+Shift+N"
      },
      "description": "Focus next finding"
    },
    "previous-finding": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Focus previous finding"
    }
  },
  
  "devtools_page": "devtools.html"
}
