{
  "manifest_version": 3,
  "name": "A11y Inspector Overlay (Pro Demo)",
  "version": "0.2.0",
  "description": "Overlay + keyboardable panel with core WCAG rules and a DevTools panel (export JSON/SARIF, rule toggles).",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Toggle A11y Panel",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Alt+Shift+A"
      },
      "description": "Toggle accessibility panel"
    },
    "next-finding": {
      "suggested_key": {
        "default": "Alt+Shift+N",
        "mac": "Alt+Shift+N"
      },
      "description": "Focus next finding"
    },
    "previous-finding": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "mac": "Alt+Shift+P"
      },
      "description": "Focus previous finding"
    }
  },
  
  "devtools_page": "devtools.html"
}
